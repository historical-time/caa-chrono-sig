install.packages("ggtern")
library(plotly)
library(dplyr)
library(DT)
# library(ggtern)
library(kableExtra)
library(knitr)
library(FactoMineR)
df <- data.frame(feat = c("A", "B", "C"),
where = c(20, 60, 60),
when = c(10, 30, 20),
what = c(70, 10, 20),
row.names = c("A", "B", "C"))
dt <- datatable(df,
rownames = FALSE,
width = '20%',
options = list(searching = FALSE,
lengthChange = FALSE,
paging = FALSE,
scrollX = F,
initComplete = JS("function(settings, json) {$(this.api().table().header()).css({'font-size' : '20px'});}"),
info = FALSE,
filter = "none")) %>%
formatStyle("feat",
backgroundColor = styleEqual(c("A", "B", "C"),
c('#FF000070', '#00800070', '#0000FF70'))
) %>%
formatStyle(columns = c(1, 2, 3, 4),
fontSize = '20px')
dt
#| fig-width: 8
df <- data.frame(feat = c("A", "B", "C"),
where = c(20, 60, 60),
when = c(10, 30, 20),
what = c(70, 10, 20),
row.names = c("A", "B", "C"))
sites <- rownames(df)
ggtern::ggtern(data = df, aes(x = where, y = when, z = what, col = sites)) +
theme_bw() +
geom_point(alpha = 0.5, size = 17) +
geom_point(size = 1, color = "black") +
theme_showarrows() +
theme(legend.position="none")
